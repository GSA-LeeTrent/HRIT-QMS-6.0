@model Qms_Web.Models.PagerViewModel

<div class="row mt-1">
    <div class="col-12">
        @(Html.Kendo().Grid <QmsCore.UIModel.User>()
            .Name("active-users-grid")
            .Columns(columns =>
            {
                columns.Bound(p => p.EmailAddress);
                columns.Bound(p => p.DisplayName);
                columns.Bound(p => p.OrganizationName);
                columns.Bound(p => p.ManagerName);
            })
            .ToolBar(toolbar => toolbar.Create())
            .Editable(editable => editable.Mode(GridEditMode.PopUp).TemplateName("UserCreatePopupEditor"))
            .Sortable()
            .Filterable()
            .Pageable(pager => pager
                .Input(Model.Input)
                .Numeric(Model.Numeric)
                .Info(Model.Info)
                .PreviousNext(Model.PreviousNext)
                .Refresh(Model.Refresh)
                .PageSizes(Model.PageSizes)
            )
            .DataSource(dataSource => dataSource
                .Ajax()
                .PageSize(20)
                .Read(read => read.Action("ActiveUsers_Read", "UserAdmin"))
                .Create(update => update.Action("AddNewUser", "UserAdmin"))
           )
        )
    </div>
</div>
