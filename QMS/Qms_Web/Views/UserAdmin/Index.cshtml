
@{
    var showUserAdminActiveTabString = ViewData["ShowUserAdminActiveTab"] as string;
    var showUserAdminInactiveTabString = ViewData["ShowUserAdminInactiveTab"] as string;

    bool showUserAdminActiveTab = Convert.ToBoolean(showUserAdminActiveTabString);
    bool showUserAdminInactiveTab = Convert.ToBoolean(showUserAdminInactiveTabString);


}
<h1 class="display-6 mt-3 text-center">User Administration</h1>

@(Html.Kendo().TabStrip()
    .Name("user-admin-tabstrip")
    .Items(tabstrip =>
    {
        tabstrip.Add().Text("Active")
            .LoadContentFrom(Url.Action("_ActiveUsers", "UserAdmin"))
            .Selected(@showUserAdminActiveTab);

        tabstrip.Add().Text("Inactive")
            .LoadContentFrom(Url.Action("_InactiveUsers", "UserAdmin"))
            .Selected(@showUserAdminInactiveTab);
    })
)