@{
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<div id="qmsWarning" class="card text-center mx-auto mt-0" style="width:55%">
  <div class="card-body">
    <h5 class="card-title">WARNING</h5>
    <p class="card-text text-left">This is a U.S. General Services Administration Federal Government computer system that is FOR OFFICIAL USE ONLY. This system is subject to monitoring. Therefore, no expectation of privacy is to be assumed. Individuals found performing unauthorized activities are subject to disciplinary action including criminal prosecution.</p>
    <form action="/login?returnUrl=@System.Net.WebUtility.UrlEncode(returnUrl)" method="post">
        <input type="submit" class="k-button k-button-md k-rounded-md k-button-solid k-button-solid-primary" value="Agree and Login"/>
    </form>
  </div>
</div>

<div id="warningContainer" class="m-0 p-0"></div>

@section Scripts {
  <script src="~/js/qms_browsers.js"></script>
}
