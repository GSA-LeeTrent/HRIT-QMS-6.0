<h1 class="h4 mt-5">QMS Index Page</h1>

<hr class="mt-5" />
<h4>Telerik</h4>
<hr />
@(Html.Kendo().Button()
    .Name("kendoIconButtonmmmm")
    .HtmlAttributes(new { type = "button" })
    .ThemeColor(ThemeColor.Primary)
    .Icon("k-button-icon k-icon k-i-plus")
    .Content("Add New User")
    .Events(ev => ev.Click("createAndShowPopup"))
)

<div id="windowForAssign"></div>

<hr class="mt-5" />
<h4>Bootstrap</h4>
<hr />
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <script>
        function createAndShowPopup() {
            var kendoWindowAssign = $("#windowForAssign");
            kendoWindowAssign.kendoWindow({
                width: "650px",
                modal: true,
                height: '120px',    
                iframe: true,
                resizable: false,
                title: "Add New QMS User",
                content: "https/google.com",
                visible: false
            });

            var popup = $("#windowForAssign").data('kendoWindow');
            popup.open();
            popup.center();
    }
    </script>
    <script>
    </script>
}